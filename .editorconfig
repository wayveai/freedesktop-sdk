# Editor Config
# https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
insert_final_newline = true

# Keep whitespacing in patches because GIT
# might fail if the hashes and changes don't exactly match
[*.patch]
insert_final_newline = false
trim_trailing_whitespace = false

[*.bst]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
