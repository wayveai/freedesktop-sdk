{
    "app-id": "org.flatpak.Readline",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "readline",
    "modules": [
        {
            "name": "readline",
            "buildsystem": "simple",
            "build-commands": [
                "g++ -static-libstdc++ -o readline -g -O2 readline.cc -lreadline",
                "install -D readline /app/bin/readline"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "readline.cc"
                }
            ]
        }
    ]
}
